{
  "name": "diary",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "SET NODE_OPTIONS=--openssl-legacy-provider && vue-cli-service electron:build",
    "start": "SET NODE_OPTIONS= && vue-cli-service electron:serve",
    "type-check": "vue-tsc --noEmit",
    "type-check:watch": "vue-tsc --noEmit --watch",
    "format": "prettier --write \"src/**/*.{js,ts,vue,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,vue,json,css,scss,md}\"",
    "update-imports": "node ./scripts/update-imports.js"
  },
  "dependencies": {
    "argon2": "^0.40.3",
    "core-js": "^3.8.3",
    "dexie": "^4.2.1",
    "jssha": "^3.3.1",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.3",
    "uuid": "^13.0.0",
    "vue": "^3.2.13",
    "vue-class-component": "^8.0.0-0",
    "vue-i18n": "^9.14.5"
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^18.19.130",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/devtools": "^6.6.4",
    "electron": "^39.2.4",
    "electron-devtools-installer": "^4.0.0",
    "prettier": "^3.7.4",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "~5.0.0",
    "vue-cli-plugin-electron-builder": "~3.0.0-alpha.0",
    "vue-tsc": "^1.8.27"
  },
  "preload": {
    "js": "./src/preload.js"
  }
}
